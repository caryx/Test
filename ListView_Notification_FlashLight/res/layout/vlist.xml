<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="1dip"
    android:divider="#fff000"  
	android:dividerHeight="1dp" 
	android:dividerPadding="1dp" 
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"      
        android:layout_height="@dimen/activity_column_height"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textUsrName"
        android:layout_width="80dip"
        android:layout_height="fill_parent"
        android:text="usr_name"
        android:textSize="@dimen/activity_font_size"
        android:singleLine="true"
        android:gravity="left"
        android:scrollHorizontally="true"
    />
    <TextView
        android:id="@+id/textUsrAddr"
        android:layout_width="60dp"
        android:layout_height="fill_parent"
        android:text="app_addr"
        android:textSize="@dimen/activity_font_size"
        android:gravity="left"        
        android:singleLine="true"
    />
    <TextView
        android:id="@+id/textUsrAge"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="app_addr"
        android:textSize="@dimen/activity_font_size"
        android:gravity="right"
        
    />
</LinearLayout>